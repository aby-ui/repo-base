		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="Text" inherits="GameFontHighlight" justifyH="LEFT">
					<Size x="0" y="24"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.CheckButton" relativePoint="RIGHT" x="2" y="0"/>
						<Anchor point="RIGHT" x="-8" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>

