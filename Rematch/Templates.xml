		<Scripts>
			<OnLoad>
				self:SetMinMaxValues(0,100)
				self:SetValue(45)
				for i,percent in ipairs({0.125,0.25,0.375,0.5,0.625,0.75,0.875}) do
					self.divider[i]:ClearAllPoints()
					self.divider[i]:SetPoint("CENTER",self,"LEFT",self:GetWidth()*percent,0)
				end
			</OnLoad>
		</Scripts>
