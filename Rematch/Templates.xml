					<Size x="11" y="11"/>
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT"  x="-11" y="0"/>
					</Anchors>						
				</Texture>
				<Texture atlas="PetJournal-ExpBar-Mid">
					<Size x="0" y="11"/>
					<Anchors>
						<Anchor point="LEFT" x="11" y="0"/>
						<Anchor point="RIGHT" x="-11" y="0"/>
					</Anchors>	
				</Texture>
				<Texture parentArray="divider" atlas="PetJournal-ExpBar-Divider">
