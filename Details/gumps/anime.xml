<Frame name="DetailsAlertRankUpTemplate" virtual="true">

	<Size>
		<AbsDimension x="296" y="74"/>
	</Size>
	
	<Anchors>
		<Anchor point="BOTTOM">
			<Offset>
				<AbsDimension x="0" y="0"/>
