<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<Button name="BagnonMenuButtonTemplate" virtual="true">
		<Size x="20" y="20"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<NormalTexture file="Interface\Buttons\UI-Quickslot2">
			<Size x="34" y="34"/>
			<Anchors>
				<Anchor point="CENTER" x="0" y="0"/>
			</Anchors>
		</NormalTexture>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon"/>
			</Layer>
		</Layers>
	</Button>

	<CheckButton name="BagnonMenuCheckButtonTemplate" inherits="BagnonMenuButtonTemplate" virtual="true">
		<CheckedTexture file="Interface\Buttons\CheckButtonHilight" alphaMode="ADD"/>
	</CheckButton>
	<Button name="BagnonOwnerSelectorTemplate" inherits="BagnonMenuButtonTemplate" virtual="true"/>

	<Button name="BagnonSortButtonTemplate" inherits="BagnonMenuButtonTemplate" virtual="true">
        <Size x="23" y="23"/>
        <NormalTexture atlas="bags-button-autosort-up" useAtlasSize="false"><Size x="23" y="23"/><Anchors><Anchor point="CENTER" x="0" y="1"/></Anchors></NormalTexture>
        <PushedTexture atlas="bags-button-autosort-down" useAtlasSize="true" setAllPoints="true"/>
        <HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"><Size x="23" y="23"/><Anchors><Anchor point="CENTER" x="0" y="1"/></Anchors></HighlightTexture>
		<!--163ui <Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\Icons\Achievement_GuildPerk_Quick and Dead"/>
			</Layer>
		</Layers>-->
	</Button>

	<CheckButton name="BagnonBagToggleTemplate" inherits="BagnonMenuCheckButtonTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\Buttons\Button-Backpack-Up"/>
			</Layer>
		</Layers>
	</CheckButton>
</Ui>
