	<Frame name="DWCCopyFrame" parent="UIParent" movable="true" enableMouse="true" inherits="DialogBoxFrame">
		<Size>
			<AbsDimension x="800" y="600"/>
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontHighlight">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="5" y="-5"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate" toplevel="true">
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="-10" y="-30"/>
						</Offset>
					</Anchor>
					<Anchor point="BOTTOM" relativeTo="$parentButton" relativePoint="TOP">
						<Offset>
							<AbsDimension x="0" y="5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="755" y="530"/>
				</Size>
				<ScrollChild>
					<EditBox name="$parentText" letters="99999" multiLine="true" autoFocus="true" enableMouse="true">
						<Size>
							<AbsDimension x="750" y="544"/>
						</Size>
						<Scripts>
							<OnEscapePressed>
								DWCCopyFrame:Hide();
							</OnEscapePressed>
						</Scripts>
						<FontString inherits="ChatFontNormal"/>
					</EditBox>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
		<Scripts>
			<OnMouseDown>
				if (button == "LeftButton") then
				self:StartMoving()
				end
			</OnMouseDown>
			<OnMouseUp>
				self:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
	</Frame>

