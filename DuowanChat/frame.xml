	<Button name="dwReadyCheckButton" frameStrata="MEDIUM" parent="UIParent" hidden ="false">

		<Size>
			<AbsDimension x="24" y="24"/>
		</Size>
		<Anchors>
			<Anchor point="LEFT" relativeTo="DWCRandomButton" relativePoint="RIGHT">
				<Offset><AbsDimension x="1" y="0"/></Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentIcon"  atlas="services-checkmark" setAllPoints="true">
					<Size>
						<AbsDimension x="16" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:SetAlpha(0.8)
				self:RegisterForClicks("AnyUp");
				self:RegisterForDrag("LeftButton");
				CoreUIEnableTooltip(self, READY_CHECK);
			</OnLoad>
			<OnDragStart>
				if DWCChatFrame:IsMovable() then
					DWCChatFrame:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				if DWCChatFrame:IsMovable() then
					DWCChatFrame:StopMovingOrSizing();
				end
			</OnDragStop>
			<OnClick>
				if ( UnitIsGroupLeader("player") or UnitIsGroupAssistant("player") ) then
					DoReadyCheck();
				else
					DEFAULT_CHAT_FRAME:AddMessage("无法发起就位确认，不在队伍或不是队长", 1, 1, 0)
				end
			</OnClick>
		</Scripts>

		<NormalTexture  file="Interface\AddOns\DuowanChat\icon\text_nor_frame" />
		<PushedTexture  file="Interface\AddOns\DuowanChat\icon\text_push_frame" />
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
	</Button>

	<Button name="dwCountDownButton" frameStrata="MEDIUM" parent="UIParent" hidden ="false">
		<Size>
			<AbsDimension x="24" y="24"/>
		</Size>
		<Anchors>
			<Anchor point="LEFT" relativeTo="dwReadyCheckButton" relativePoint="RIGHT">
				<Offset><AbsDimension x="1" y="0"/></Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<Texture name="$parentIcon"  atlas="ShipMissionIcon-Combat-Map" setAllPoints="true">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:SetAlpha(0.8)
				self:RegisterForClicks("AnyUp");
				self:RegisterForDrag("LeftButton");
				CoreUIEnableTooltip(self, "倒计时", "左键点击-倒计时10秒\n右键点击-倒计时5秒\n ALT左键-倒计时20秒\nCTRL左键-倒计时60秒\n中键点击-停止倒计时\n连续点击-会被禁言");
			</OnLoad>
			<OnDragStart>
				if DWCChatFrame:IsMovable() then
					DWCChatFrame:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				if DWCChatFrame:IsMovable() then
					DWCChatFrame:StopMovingOrSizing();
				end
			</OnDragStop>
			<OnClick>
				if ( IsInGroup() and (UnitIsGroupLeader("player") or UnitIsGroupAssistant("player")) ) then
					PlaySound(SOUNDKIT.IG_MAINMENU_OPTION_CHECKBOX_ON);
					local n = 10
					if button == "RightButton" then
						n = 5
					elseif button == "MiddleButton" then
						n = 0
					elseif IsAltKeyDown() then
						n = 20
					elseif IsControlKeyDown() then
						n = 60
					end
					C_PartyInfo.DoCountdown(n);
					DEFAULT_CHAT_FRAME:AddMessage(n == 0 and "停止倒计时" or format("发起%d秒倒计时...", n), 1, 1, 0)
				else
					DEFAULT_CHAT_FRAME:AddMessage("无法发起倒计时，不在队伍或不是队长", 1, 1, 0)
				end
			</OnClick>
			<OnEnter>
				GameTooltip_SetDefaultAnchor(GameTooltip, self);
				GameTooltip:SetText(READY_CHECK, 1, 1, 1);
				GameTooltip:Show();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>

		<NormalTexture  file="Interface\AddOns\DuowanChat\icon\text_nor_frame" />
		<PushedTexture  file="Interface\AddOns\DuowanChat\icon\text_push_frame" />
		<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
	</Button>

