<Ui xmlns:xsi="" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <ItemButton name="MeetingStoneItemButtonTemplate" parentArray="Items" motionScriptsWhileDisabled="true" virtual="true">
        <Anchors>
            <Anchor point="LEFT" x="20" y="0"/>
        </Anchors>
        <Scripts>
            <OnEnter>
                local item = self:GetItemID()
                if item then
                    GameTooltip:SetOwner(self, 'ANCHOR_RIGHT')
                    GameTooltip:SetItemByID(item)
                    GameTooltip:Show()
                end
                self:GetParent():LockHighlight()
            </OnEnter>
            <OnLeave>
                GameTooltip_Hide()
                self:GetParent():UnlockHighlight()
            </OnLeave>
        </Scripts>
    </ItemButton>
    <Button name="MeetingStoneUrlButtonTemplate" virtual="true">
		<ButtonText parentKey="Text"/>
		<NormalFont style="GameFontNormal"/>
		<HighlightFont style="GameFontHighlight"/>
		<DisabledFont style="GameFontDisable"/>
    </Button>
    <Button name="MeetingStoneQuestItemTemplate" virtual="true">
        <Frames>
            <ItemButton parentKey="Item1" inherits="MeetingStoneItemButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" x="20" y="0"/>
                </Anchors>
            </ItemButton>
            <ItemButton parentKey="Item2" inherits="MeetingStoneItemButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Item1" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
            </ItemButton>
            <ItemButton parentKey="Item3" inherits="MeetingStoneItemButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Item2" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
            </ItemButton>
            <ItemButton parentKey="Item4" inherits="MeetingStoneItemButtonTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.Item3" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
            </ItemButton>
            <Button parentKey="Reward" inherits="UIPanelButtonTemplate" hidden="true" text="领取奖励">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-20" y="0"/>
                </Anchors>
            </Button>
            <Button parentKey="Extern" inherits="MeetingStoneUrlButtonTemplate" hidden="true">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="RIGHT" x="-20" y="0"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():OnExternClick(self)
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Layers>
            <Layer level="ARTWORK">
                <Texture atlas="groupfinder-button-cover" setAllPoints="true"/>
                <FontString parentKey="Progress" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="RIGHT" x="-10" y="0"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Text" inherits="GameFontHighlightLeft">
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.Item" relativePoint="RIGHT" x="5" y="0"/>
                        <Anchor point="RIGHT" relativeKey="$parent.Progress" relativePoint="LEFT" x="-5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <HighlightTexture parentKey="HighlightTexture" setAllPoints="true" file="Interface\PVPFrame\PvPMegaQueue" alphaMode="ADD">
            <Anchors>
                <Anchor point="TOPLEFT" x="10" y="-7"/>
                <Anchor point="BOTTOMRIGHT" x="-10" y="5"/>
            </Anchors>
            <TexCoords left="0.00195313" right="0.63867188" top="0.70703125" bottom="0.76757813"/>
        </HighlightTexture>
    </Button>
