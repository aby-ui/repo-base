						_G[self:GetName().."Tab1Middle"]:Show()
						_G[self:GetName().."Tab2Left"]:Hide()
						_G[self:GetName().."Tab2Right"]:Hide()
						_G[self:GetName().."Tab2Middle"]:Hide()

