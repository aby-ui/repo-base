			</OnLoad>
			<OnShow>
				if self.firstshow then
					self.firstshow = false
					self:CreateButtons( _G[self:GetName().."BossMods"] )
					self:CreateButtons( _G[self:GetName().."DBMOptions"] )
					self:UpdateMenuFrame( _G[self:GetName().."BossMods"] )
				end
			</OnShow>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</Frame>

